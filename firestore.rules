rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {

      // Disallow by default
      allow read, write: if false;

      // Allow reading codes
      match /codes/{code} {

        allow read: if true;

      }

      // Allow reading of public event meta
      match /publicEventData/{eventId} {

        allow get: if true;

      }

    }
  }
}